{
    "compilerOptions": {
        "declaration": true,
        "inlineSourceMap": false,
        "lib": [
            "dom",
            "es2020"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./lib",
        "removeComments": false,
        "rootDir": "./src",
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": [
        ".vscode-test",
        "lib",
        "node_modules"
    ]
}
